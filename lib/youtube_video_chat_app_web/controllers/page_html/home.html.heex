<script>
  // Handle room code joining
  document.querySelector('form').addEventListener('submit', function(e) {
    e.preventDefault();
    const roomCode = e.target.room_code.value.trim();
    if (roomCode) {
      window.location.href = '/rooms/' + roomCode;
    }
  });
</script>
